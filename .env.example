# Discord
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id

# Comma-separated Discord user IDs with admin access (backfill, credit)
ADMIN_IDS=123456789012345678

# Supabase
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOi...

# EVM Network (Mezo mainnet by default)
# If you see "missing response for request" errors, try alternating RPCs:
# https://mezo.drpc.org | https://rpc-http.mezo.boar.network | https://mainnet.mezo.public.validationcloud.io
RPC_URL=https://rpc-http.mezo.boar.network
CHAIN_ID=31612

# Token to use for deposits/withdrawals (BTC on Mezo)
TOKEN_CONTRACT=0x7b7C000000000000000000000000000000000000
TOKEN_DECIMALS=18

# Bot treasury - must hold funds for withdrawals
# MUST be funded and private key kept secure!
TREASURY_PRIVATE_KEY=your_treasury_private_key

# Optional: Block explorer URL for tx links
EXPLORER_URL=https://explorer.mezo.org

# Testing: set to 1 or true to skip 5,000 sats minimum withdrawal
SKIP_WITHDRAWAL_MIN=true

# Web deposit app URL
DEPOSIT_WEB_URL=https://deposit.mallard.sh/sbot

# ── Game Boy Streaming ──
# A user account token is required for video streaming (Discord blocks video from bots)
STREAM_USER_TOKEN=
GUILD_ID=
STAGE_CHANNEL_ID=
GB_CHANNEL_ID=
ROM_PATH=./rom.gb
GB_MIN_BID=0.001
GB_ROUND_MS=150
GB_SPEED=3
GB_HOLD_FRAMES=16
